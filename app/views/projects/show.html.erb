<h1><%= @project.name %></h1>
<p> Material: <%= @project_material %></p>
<p> Challenge Theme: <%= @project_challenge_theme %></p>
<p> Number of Contestants: <%= @contestant_count %></p>
<p> Average Contestant Experience: <%= @average_years_exp %></p>

<%= form_with url: "/projects/#{@project.id}", method: :patch, data: {turbo: false} do |form| %>
  <%= form.text_field :id, "Enter Contestant ID: "%>
  <%= form.submit "Add Contestant to Project" %>
<% end %>

